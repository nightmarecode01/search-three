{
  "compilerOptions": {   
    "target": "es6",   
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",           
    "rootDir": "src",            
    "noImplicitAny": true,  
    "outDir": "dist",     
    "moduleResolution": "node",    
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,        
    "strict": false,                                       
    "skipLibCheck": true                            
  },
  "include": ["./src/**/*"]
}